page {
  background: #fff;
}
.clear {
  clear: both;
}
.tishi {
  width: 690rpx;
  font-size: 24rpx;
  color: #343434;
  line-height: 100rpx;
}
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #FFFFFF;
}
.wrapper {
  position: relative;
  z-index: 90;
  background: #fff;
  padding-bottom: 40rpx;
}
.input-content {
  padding: 40rpx 30rpx;
}
.input-item {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
      -ms-flex-align: start;
          align-items: flex-start;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  height: 100rpx;
  border-radius: 4px;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.input-item:last-child {
    margin-bottom: 0;
}
.input-item .tit {
    height: 50rpx;
    line-height: 56rpx;
    font-size: 26rpx;
    color: #606266;
}
.input-item input {
    height: 50rpx;
    font-size: 30rpx;
    color: #303133;
    width: 100%;
}
.input-item .code {
    position: absolute;
    right: 0rpx;
    font-size: 30rpx;
    color: #b2b2b2;
    border: 1rpx solid #b2b2b2;
    padding: 8rpx 30rpx;
    border-radius: 50rpx;
    z-index: 999;
}
.input-item .uu {
    position: absolute;
    right: 0;
    font-size: 26rpx;
    color: #08b000;
}
.input-item .uuu {
    position: absolute;
    right: 0;
    font-size: 26rpx;
    color: #b0002f;
}
.input-item .canvas-img-code {
    position: absolute;
    right: 120rpx;
    z-index: 999;
}
.input-item .canvas-img-code canvas {
      border: 1rpx solid #eaeaea;
      background: #eaeaea;
}
.input-item .uni-icon {
    position: absolute;
    right: 20rpx;
    font-size: 40rpx;
    z-index: 999;
    color: #008ab0;
}
.input-item .uni-icon image {
      width: 40rpx;
      height: 40rpx;
}
.input-item .kabuqing {
    position: absolute;
    right: 0;
    z-index: 999;
    color: #008ab0;
    font-size: 30rpx;
}
.input-item .kk {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 0rpx;
    z-index: 99;
}
.input-item .uuua {
    position: absolute;
    left: 40rpx;
    font-size: 28rpx;
    color: #666666;
    height: 40rpx;
    padding-left: 30rpx;
    padding-top: 14rpx;
}
.input-item .uuua text {
      color: #008ab0;
}
.confirm-btn {
  width: 690rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50px;
  margin-top: 30rpx;
  background: #008ab0;
  color: #fff;
  font-size: 32rpx;
}
.confirm-btn:after {
    border-radius: 100px;
}
.forget-section {
  font-size: 30rpx;
  color: #008ab0;
  text-align: center;
  margin-top: 40rpx;
}
.forget-section :first-child {
    float: left;
    padding-left: 30rpx;
}
.forget-section :last-child {
    float: right;
    padding-right: 30rpx;
}

