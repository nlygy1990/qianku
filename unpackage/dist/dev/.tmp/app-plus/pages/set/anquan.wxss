page {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
}
page .content .ctops {
    width: 100%;
    height: 90rpx;
    font-size: 24rpx;
    color: #808080;
    line-height: 90rpx;
    padding: 0 40rpx;
}
page .content .list-cell {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: baseline;
    -webkit-align-items: baseline;
        -ms-flex-align: baseline;
            align-items: baseline;
    padding: 20rpx 40rpx;
    line-height: 60rpx;
    position: relative;
    background: #fff;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
}
page .content .list-cell.b-b:after {
      left: 30rpx;
      right: 30rpx;
}
page .content .list-cell.m-t {
      margin-top: 16rpx;
}
page .content .list-cell .cell-tit {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      font-size: 28rpx;
      color: #323232;
      margin-right: 10rpx;
}
page .content .input-item {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: start;
    -webkit-align-items: flex-start;
        -ms-flex-align: start;
            align-items: flex-start;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    height: 100rpx;
    border-radius: 4px;
    margin-bottom: 10rpx;
    padding: 0rpx 40rpx;
    background: #fff;
}
page .content .input-item input {
      height: 50rpx;
      font-size: 30rpx;
      color: #303133;
      width: 100%;
}
page .content .input-item text {
      position: absolute;
      right: 40rpx;
      font-size: 30rpx;
      color: #008ab0;
      border: 1rpx solid #008ab0;
      padding: 8rpx 30rpx;
      border-radius: 50rpx;
      z-index: 999;
}
page .content .confirm-btn {
    width: 670rpx;
    height: 76rpx;
    position: absolute;
    bottom: 40rpx;
    left: 40rpx;
    line-height: 76rpx;
    border-radius: 50px;
    margin-top: 30rpx;
    background: #008ab0;
    color: #fff;
    font-size: 32rpx;
}
page .content .confirm-btn:after {
      border-radius: 100px;
}

